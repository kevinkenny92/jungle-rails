<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <% if @product.reviews.length > 0 %>
        <% if current_user %>
          <div class="review col-sm-12">
            <%= link_to 'Write a review!', '#write_review' %>
          </div>
        <% end %>

        <% @product.reviews.reverse.each do |review| %>
          <%= render 'ratings', review: review %>
        <% end %>
      <% else %>
        <div class="review col-sm-12">
          <h5 class="rating-by-user">
            There are no current reviews for this item...
          </h5>

          <% if current_user %>
            <p>
              <%= link_to 'Be the first to write one!', '#write_review' %>
            </p>
          <% end %>
        </div>
      <% end %>

    </div>

    <% if current_user %>
      <div id="write_review" class="row">
        <%= form_for [@product, @review] do |form| %>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, options_for_select(1..5), { include_blank: true }, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <%= form.submit 'Submit Review', class: 'btn btn-primary' %>

        <% end %>
      </div>
    <% end %>

  </article>

</section>