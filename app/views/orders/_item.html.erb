<% line_item = LineItem.find_by(id: product_id) %>

<tr>
  <td>
    <%= image_tag product_id.product.image.tiny %>
  </td>
  <td>
    <h4><%= product_id.product.name %></h4>
    <br>
    <p><%= product_id.product.description %></p>
  </td>
  <td>
    <%= humanized_money line_item.item_price_cents / 100.0 %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= humanized_money line_item.total_price_cents / 100.0 %>
  </td>
</tr>